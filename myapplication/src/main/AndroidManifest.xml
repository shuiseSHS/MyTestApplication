<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.myapplication">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <application
        android:name="com.example.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.WelcomeActivity"
            android:configChanges="orientation|screenSize|keyboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.MainActivity2"
            android:configChanges="orientation|screenSize|keyboard">
        </activity>
        <activity
            android:name="com.example.RecyclerViewTest"
            android:configChanges="orientation|screenSize|keyboard">
        </activity>
        <activity
            android:name="com.example.vectordrawable.VectorDrawableActivity"
            android:configChanges="orientation|screenSize|keyboard">
        </activity>
        <activity
            android:name="com.example.AnimationTest"
            android:configChanges="orientation|screenSize|keyboard">
        </activity>
        <activity
            android:name="com.example.CoordinatorLayoutActivity"
            android:configChanges="orientation|screenSize|keyboard">
        </activity>
        <activity
            android:name="com.example.flowlayout.FlowLayoutActivity"
            android:configChanges="orientation|screenSize|keyboard">
        </activity>
        <activity
            android:name="com.example.CameraActivity"
            android:configChanges="orientation|screenSize|keyboard">
        </activity>
        <activity
            android:name="com.example.transition.TransitionActivity"
            android:configChanges="orientation|screenSize|keyboard">
        </activity>
        <activity
            android:name="com.example.transition.Transition1Activity"
            android:configChanges="orientation|screenSize|keyboard">
        </activity>
        <activity
            android:name="com.example.camera.CustomCameraActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.example.dexloader.DexloaderActivity">
        </activity>
        <activity android:name="com.example.dexloader.Dexloader2Activity">
        </activity>
        <activity android:name="com.example.waveview.WaveViewActivity">
        </activity>
    </application>

</manifest>