<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.com.example.MainActivity">

    <SurfaceView
        android:id="@+id/view_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btn_zoom_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="zoomOut"
        android:text="+"/>

    <Button
        android:id="@+id/btn_zoom_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_zoom_out"
        android:onClick="zoomIn"
        android:text="-"/>

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="initCameraAndPreview"
        android:layout_alignParentBottom="true"
        android:text="O"/>

    <Button
        android:id="@+id/btn_camera_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="closeCamera"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="X"/>
</RelativeLayout>
